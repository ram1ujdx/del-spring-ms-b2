<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="airtelFibre" class="com.del.springapp.InternetConnection"/>
	
	<bean id="jio4G" class="com.del.springapp.InternetConnection"/>
	
	<bean id="hp" class="com.del.springapp.Laptop">
		<property name="connection" ref="airtelFibre"/>
	</bean>
	
	<bean id="macbook" class="com.del.springapp.Laptop">
		<property name="connection" ref="jio4G"/>
	</bean>

</beans>